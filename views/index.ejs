<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crypto Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #002D62;
      font-family: 'Arial', sans-serif;
    }

    .container {
      margin-top: 50px;
    }

    .table {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      border-radius: 10px;
      overflow: hidden;
    }

    thead th {
      background-color: #343a40;
      color: white;
      text-align: center;
    }

    tbody tr:hover {
      background-color: #e9ecef;
    }

    .name {
      font-weight: bold;
    }

    .btn-details {
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }

    .btn-details:hover {
      background-color: #0056b3;
    }
    .text-center mb-4{
        color: #F0F8FF;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 style=" color: #F0F8FF;" class="text-center mb-4">Cryptocurrency Dashboard</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Price (USD)</th>
          <th scope="col">Change (%)</th>
          <th scope="col">Details</th>
        </tr>
      </thead>
      <tbody>
        <% coins.forEach((coin, index) => { %>
          <tr>
            <th scope="row" class="text-center"><%= index + 1 %></th>
            <td class="name text-center"><%= coin.name %></td>
            <td class="text-center">$<%= parseFloat(coin.price).toFixed(2) %></td>
            <% if (parseInt(coin.change) > 0) { %>
              <td class="text-center" style="color: green;"><%= coin.change %>%</td>
            <% } else { %>
              <td class="text-center" style="color: red;"><%= coin.change %>%</td>
            <% } %>
            <td class="text-center">
              <form action="/getCoinDetails" method="post">
                <input type="hidden" name="uuid" value="<%= coin.uuid %>">
                <button type="submit" class="btn-details">View Details</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

 
</body>
</html>
